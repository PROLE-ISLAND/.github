# =============================================================================
# 環境変数テンプレート
# 新規プロジェクト用の必須/オプション環境変数
# =============================================================================

# ===========================================
# アプリケーション基本設定
# ===========================================

# アプリURL（必須）
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 環境（development / staging / production）
NODE_ENV=development

# ===========================================
# Supabase（必須）
# ===========================================

# Supabase プロジェクトURL
# 取得: Supabase Dashboard > Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co

# Supabase 匿名キー（公開可能）
# 取得: Supabase Dashboard > Settings > API > anon public
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase サービスロールキー（サーバーサイドのみ、絶対に公開禁止）
# 取得: Supabase Dashboard > Settings > API > service_role
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# 認証設定（オプション）
# ===========================================

# 認証コールバックURL
NEXT_PUBLIC_AUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# セッション有効期限（秒）
SESSION_EXPIRY=3600

# ===========================================
# AI/ML機能（オプション）
# ===========================================

# OpenAI API キー
# 取得: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# OpenAI モデル
OPENAI_MODEL=gpt-4o

# ===========================================
# メール送信（オプション）
# ===========================================

# Resend API キー
# 取得: https://resend.com/api-keys
RESEND_API_KEY=re_...

# 送信元メールアドレス
EMAIL_FROM="Project Name <noreply@example.com>"

# ===========================================
# 非同期処理（オプション）
# ===========================================

# Inngest 設定
# 取得: https://app.inngest.com
INNGEST_SIGNING_KEY=signkey-...
INNGEST_EVENT_KEY=...

# 非同期処理有効化
USE_ASYNC_PROCESSING=true

# ===========================================
# モニタリング（本番用）
# ===========================================

# Sentry DSN
# 取得: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# Sentry 環境
SENTRY_ENVIRONMENT=development

# ===========================================
# 外部サービス連携（オプション）
# ===========================================

# Stripe（決済）
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# 開発用設定
# ===========================================

# デバッグモード
DEBUG=false

# ログレベル（debug / info / warn / error）
LOG_LEVEL=info

# ===========================================
# テスト用設定
# ===========================================

# E2E テスト用ベースURL
PLAYWRIGHT_BASE_URL=http://localhost:3000

# E2E テスト用ユーザー
E2E_TEST_EMAIL=e2e-test@example.com
E2E_TEST_PASSWORD=e2e-test-password

# =============================================================================
# 注意事項
# =============================================================================
#
# 1. このファイルを .env.local にコピーして使用
#    cp .env.example .env.local
#
# 2. .env.local は .gitignore に含まれているため、コミットされない
#
# 3. 本番環境の値は GitHub Secrets または Vercel 環境変数で設定
#
# 4. NEXT_PUBLIC_ プレフィックスの変数のみクライアントサイドで使用可能
#    機密情報には絶対に NEXT_PUBLIC_ を付けないこと
#
# =============================================================================
